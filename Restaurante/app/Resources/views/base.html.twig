        {% endblock %}


    </head>
    <body>
        

        <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      
     
      
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="btn btn-primary js-scroll-trigger" href="{{path('homepage')}}">Home</a>
          </li>
          <li class="nav-item">
           <div class="dropdown">
        <button class="btn btn-primary js-scroll-trigger" type="button" id="dropdownMenuButton" data-toggle="dropdown"      aria-haspopup="true" aria-expanded="false">
        Restaurantes
        </button>
     <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="{{path('restaurante',{'sede':'Madrid'})}}">Madrid</a>
        <a class="dropdown-item" href="{{path('restaurante',{'sede':'Valencia'})}}">Valencia</a>
        <a class="dropdown-item" href="{{path('restaurante',{'sede':'Barcelona'})}}">Barcelona</a>
        <a class="dropdown-item" href="{{path('restaurante',{'sede':'Asturias'})}}">Asturias</a>
        </div>
        </div>
          </li>
          <li class="nav-item">
            <a class="btn btn-primary js-scroll-trigger" href="{{path('contacto')}}">Contacto</a>
             {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a class="btn btn-primary js-scroll-trigger" href="{{path('logout')}}">Logout</a>
          {% endif %}
          </li>
           
        </ul>
      </div>
    </div>
  </nav>


        
