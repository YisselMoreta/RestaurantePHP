{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container d-flex h-100 align-items-center" id="loginContainer">
    
    <form id="login" action="{{ path('login') }}" method="post">
  <div class="form-group">
    <label for="username">Nombre de usuario:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" aria-describedby="username" placeholder="Nombre de usuario" require>
    
  </div>
  <div class="form-group">
    <label for="password">Contraseña:</label>
    <input type="password" id="password" name="_password" class="form-control"  placeholder="Contraseña" require>
  </div>
 
  <button type="submit" class="btn btn-primary">Login</button>
</form>
</div>
{% endblock %}